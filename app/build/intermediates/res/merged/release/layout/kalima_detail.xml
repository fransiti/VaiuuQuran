<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:local="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    >


    <RelativeLayout
        android:id="@+id/top_linear"
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:layout_alignParentTop="true"
        android:orientation="horizontal">



            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar_privacypolicy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="?attr/actionBarSize"
                local:theme="@style/ThemeOverlay.AppCompat.ActionBar"
                android:background="?attr/colorPrimary">

            </android.support.v7.widget.Toolbar>


    </RelativeLayout>
<ScrollView
    android:layout_width="fill_parent"
    android:layout_below="@+id/top_linear"
    android:layout_height="fill_parent">

    <LinearLayout
        android:layout_width="fill_parent"
        android:orientation="vertical"
        android:padding="15dp"
        android:layout_height="fill_parent">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_below="@+id/top_linear"
            android:orientation="vertical"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="14sp"
                android:text="আরবি "/>

            <View
                android:layout_width="fill_parent"
                android:layout_height="2dp"
                android:background="@color/google_red"/>
            <TextView
                android:id="@+id/arabic_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:textColor="@color/google_text_disabled"
                android:textSize="12sp"
                android:text="Lorem Ipsum is simply "/>


        </LinearLayout>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_below="@+id/top_linear"
            android:orientation="vertical"
            android:layout_marginTop="15dp"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="14sp"
                android:text="উচ্চারণ "/>
            <View
                android:layout_width="fill_parent"
                android:layout_height="2dp"
                android:background="@color/google_red"/>
            <TextView  android:id="@+id/pronunciation_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:textColor="@color/google_text_disabled"
                android:textSize="12sp"
                android:text="typesetting"/>


        </LinearLayout>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_below="@+id/top_linear"
            android:orientation="vertical"
            android:layout_marginTop="15dp"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="14sp"
                android:text="বাংলা অর্থ  "/>
            <View
                android:layout_width="fill_parent"
                android:layout_height="2dp"
                android:background="@color/google_red"/>
            <TextView  android:id="@+id/translation_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:textColor="@color/google_text_disabled"
                android:textSize="12sp"
                android:text=" centuries, but also the leap into electronic typesetting"/>


        </LinearLayout>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_below="@+id/top_linear"
            android:orientation="vertical"
            android:layout_marginTop="15dp"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="14sp"
                android:text="ইংরেজি অর্থ "/>
            <View
                android:layout_width="fill_parent"
                android:layout_height="2dp"
                android:background="@color/google_red"/>
            <TextView android:id="@+id/engtranslation_text"
                android:layout_width="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_height="wrap_content"
                android:textColor="@color/google_text_disabled"
                android:textSize="12sp"
                android:text="t ever since the 1500s, when an unknown printer took a galley of type and scrambled it to make a type specimen book. It has survived not only five centuries, but also the leap into electronic typesetting"/>


        </LinearLayout>

    </LinearLayout>
</ScrollView>

</RelativeLayout>
